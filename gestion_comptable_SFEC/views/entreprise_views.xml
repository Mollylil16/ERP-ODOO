<odoo>
    <record id="view_form_entreprise" model="ir.ui.view">
        <field name="name">custom_accounting.entreprise.form</field>
        <field name="model">custom_accounting.entreprise</field>
        <field name="arch" type="xml">
            <form string="Entreprise">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="adresse"/>
                        <field name="contact"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Clients associÃ©s">
                            <field name="clients_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="contact"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_entreprise" model="ir.ui.view">
        <field name="name">custom_accounting.entreprise.tree</field>
        <field name="model">custom_accounting.entreprise</field>
        <field name="arch" type="xml">
            <tree string="Entreprises">
                <field name="name"/>
                <field name="adresse"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>

    <record id="action_entreprise" model="ir.actions.act_window">
        <field name="name">Entreprises</field>
        <field name="res_model">custom_accounting.entreprise</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_custom_entreprise"
              name="Entreprises"
              parent="custom_accounting.menu_custom_accounting"
              action="action_entreprise"/>
</odoo>
