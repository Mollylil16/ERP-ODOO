<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue tableau de bord -->
    <record id="view_dashboard" model="ir.ui.view">
        <field name="name">gestion_comptable_sfec.dashboard</field>
        <field name="model">gestion_comptable_sfec.dashboard</field>
        <field name="arch" type="xml">
            <div class="o_dashboard">
                <!-- Indicateurs de performance -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_content">
                                <div class="o_kanban_record_content_inner">
                                    <div class="o_kanban_record_title">
                                        <h3>Commandes en cours</h3>
                                    </div>
                                    <div class="o_kanban_record_value">
                                        <field name="nb_commandes_en_cours"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_content">
                                <div class="o_kanban_record_content_inner">
                                    <div class="o_kanban_record_title">
                                        <h3>Stock critique</h3>
                                    </div>
                                    <div class="o_kanban_record_value">
                                        <field name="nb_articles_stock_critique"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_content">
                                <div class="o_kanban_record_content_inner">
                                    <div class="o_kanban_record_title">
                                        <h3>Factures impayées</h3>
                                    </div>
                                    <div class="o_kanban_record_value">
                                        <field name="montant_factures_impayees"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_content">
                                <div class="o_kanban_record_content_inner">
                                    <div class="o_kanban_record_title">
                                        <h3>Partenaires actifs</h3>
                                    </div>
                                    <div class="o_kanban_record_value">
                                        <field name="nb_partenaires_actifs"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Graphiques -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="o_graph">
                            <graph string="Evolution des ventes" type="bar">
                                <field name="date_facture" type="date" interval="month"/>
                                <field name="montant_total" operator="sum"/>
                            </graph>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="o_graph">
                            <graph string="Répartition par fournisseur" type="pie">
                                <field name="fournisseur_id"/>
                                <field name="montant_total" operator="sum"/>
                            </graph>
                        </div>
                    </div>
                </div>

                <!-- Liste des alertes -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="o_list_view neumorphic">
        <div class="list-header">
            <h3>Alertes</h3>
            <div class="list-filters">
                <button class="neumorphic-btn" t-on-click="widget.filter('all')">Toutes</button>
                <button class="neumorphic-btn" t-on-click="widget.filter('critical')">Critiques</button>
                <button class="neumorphic-btn" t-on-click="widget.filter('warning')">Avertissements</button>
            </div>
        </div>
        <div class="list-content">
            <tree>
                <field name="date_alerte"/>
                <field name="type_alerte"/>
                <field name="description"/>
                <field name="statut"/>
            </tree>
        </div>
    </div>
                            <tree>
                                <field name="date_alerte"/>
                                <field name="type_alerte"/>
                                <field name="description"/>
                                <field name="statut"/>
                            </tree>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <!-- Action pour le tableau de bord -->
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de Bord</field>
        <field name="res_model">gestion_comptable_sfec.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_type">form</field>
    </record>

    <!-- Menu pour le tableau de bord -->
    <menuitem id="menu_dashboard" name="Tableau de Bord" parent="gestion_comptable_sfec.menu_gestion_comptable_root" action="action_dashboard" sequence="1"/>
</odoo>
